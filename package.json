  "scripts": {
    "build": "tsup src/index.ts src/mcp/server.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts src/mcp/server.ts --format esm,cjs --dts --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
