  "description": "AI-first unified email toolkit for agents â€” read, send, search, classify, extract, and manage email across any provider",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "emai": "bin/emai.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./mcp": {
